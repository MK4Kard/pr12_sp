<Page x:Class="pr12_vUser.Pages.UserFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr12_vUser.Pages"
      xmlns:validators="clr-namespace:pr12_vUser.ValidationRules"
      xmlns:converters="clr-namespace:pr12_vUser.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserFormPage">
    <Page.Resources>
        <converters:InverseAndBooleansToBooleanConverter x:Key="boolConverter"/>
    </Page.Resources>

    <Grid>
        <StackPanel>
            <StackPanel>
                <Label>Логин</Label>
                <TextBox x:Name="login">
                    <TextBox.Text>
                        <Binding Path="Login" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:EmptyValidation
                                    ValidatesOnTargetUpdated="True"/>
                                <validators:LoginValidation
                                    ValidatesOnTargetUpdated="True"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
            <StackPanel Margin="0 10 0 0">
                <Label>Имя</Label>
                <TextBox x:Name="name">
                    <TextBox.Text>
                        <Binding Path="Name" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:EmptyValidation
                                    ValidatesOnTargetUpdated="True"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
            <StackPanel Margin="0 10 0 0">
                <Label>Почта</Label>
                <TextBox x:Name="email">
                    <TextBox.Text>
                        <Binding Path="Email" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:EmptyValidation
                                    ValidatesOnTargetUpdated="True"/>
                                <validators:EmailValidation
                                    ValidatesOnTargetUpdated="True"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
            <StackPanel Margin="0 10 0 0">
                <Label>Пароль</Label>
                <TextBox x:Name="pass">
                    <TextBox.Text>
                        <Binding Path="Password" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:EmptyValidation
                                    ValidatesOnTargetUpdated="True"/>
                                <validators:PasswordValidation
                                    ValidatesOnTargetUpdated="True"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
            <StackPanel Margin="0 15 0 0">
                <Button Content="Сохранить в БД" Click="save">
                    <Button.IsEnabled>
                        <MultiBinding Converter="{StaticResource boolConverter}">
                            <Binding ElementName="pass" Path="(Validation.HasError)"/>
                            <Binding ElementName="name" Path="(Validation.HasError)"/>
                            <Binding ElementName="login" Path="(Validation.HasError)"/>
                            <Binding ElementName="email" Path="(Validation.HasError)"/>
                        </MultiBinding>
                    </Button.IsEnabled>
                </Button>
                <Button Click="back">Назад</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
